<!--                android:text="210 سکه 3000 تومان"-->
<!--                percent:layout_widthPercent="50%"-->
<!--                android:layout_toRightOf="@id/ol2000"/>-->
        </androidx.percentlayout.widget.PercentRelativeLayout>
        <androidx.percentlayout.widget.PercentRelativeLayout xmlns:percent="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <Button
                android:id="@+id/ol4000"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="320 سکه 3000 تومان"
                android:background="@drawable/btn_rounded_1"
                android:padding="8dp"
                percent:layout_widthPercent="50%"/>
            <Button
                android:id="@+id/ol5000"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:text="430 سکه 5000 تومان"
                android:background="@drawable/btn_rounded_1"
                android:padding="8dp"
                percent:layout_widthPercent="50%"
                android:layout_toRightOf="@id/ol4000"/>
